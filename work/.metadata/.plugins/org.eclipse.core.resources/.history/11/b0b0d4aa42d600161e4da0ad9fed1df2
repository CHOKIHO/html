<style type="text/css">

	body div {
		width:200px;
		height:120px;
		background-color: #00bfff;
		border: 1px solid blue;
		text-align: right;
		display: none;
	}
		
	input#s_id, input#s_pw {
		width: 90px;
		margin-bottom: 5px;
	}	
	
	.show { display:block; }
		
</style>

<script type="text/javascript">

	function login() {

		var id = document.getElementById("s_id").value;
		var pw = document.getElementById("s_pw").value;
		
		if (id.trim().length>0 && pw.trim().length>0) {
		
			var box1 = document.getElementById("box1");
			var box2 = document.getElementById("box2");

			/* 클래스 넣기 */
			box1.className="";
			box2.className="show";
			
		} else {
			
			alert ("아이디 또는 비밀번호를 입력하세요")
		}
		
/* 
		[참고] 스타일로 지정해야함	
		var box =document.getElementById("box");
		box.style.background=color;    

 */		

	}

</script>

</head>



<body>

	<h1>DIV 숨기기</h1>
	<div id="box1" class="show">
		<form>
			<fieldset>
				<legend>로그인</legend>
				<label for="s_id">ID:</label>
				<input type="text" id="s_id" name="id"/><br/>
				
				<label for="s_pw">PW:</label>
				<input type="password" id="s_pw" name="pw"/><br/>
				
				<input type="button" value="로그인" onclick="login()"/>
				
			</fieldset>
		</form>

	</div>
	<div id="box2">
		OOO님 환영합니다.
