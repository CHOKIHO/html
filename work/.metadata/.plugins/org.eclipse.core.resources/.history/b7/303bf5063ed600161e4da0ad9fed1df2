<script type="text/javascript">

	function setBg(v1) {
		
		var color="";
		swicth (v1) {
			case "Red":
				color="#f00";
				break;
			case "Green":
				color="#0f0";
			case "Blue":
				color="#00f"
		}
		
		var box =document.getelementById("box");
		
		box.style.background=color;    /* 스타일로 지정해야함 */
		
	}

</script>

