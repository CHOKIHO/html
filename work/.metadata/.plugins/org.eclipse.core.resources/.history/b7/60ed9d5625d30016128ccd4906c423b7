	<script type="text/javascript">
		//변수선언
		var str=10;
		//함수선언
		function exe(n) {
			
			//.show 클래스 지정하기
			//현재 문서에서 id가 tab1, tab2, tab3인 태그들을 찾는다.
			var tab1 = document.getElementById("tab1");
			var tab2 = document.getElementById("tab2");
			var tab3 = document.getElementById("tab3");
			
			var id1 = document.getElementById("t1");
			var id2 = document.getElementById("t2");
			var id3 = document.getElementById("t3");
			
			
			//검색된 div태그
			tab1.className="tab_content";
			tab2.className="tab_content";
			tab3.className="tab_content";
			
			if (n == 1) {
				tab1.className="tab_content show";
				id1.classNmae="selected";
				
			} else if (n == 2) {
				tab2.className="tab_content show";
			} else {
				tab3.className="tab_content show";
			}
		}
		
	</script>

