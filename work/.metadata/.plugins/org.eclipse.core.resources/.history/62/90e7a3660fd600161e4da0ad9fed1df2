	자원은 사용자로 하여금 입력하도록 하는 것이죠!!
	
	<form>
		<table>
			<thead>
				<tr>
					<th>이름</th>
					<th>이메일</th>
					<th>연락처</th>
				</tr>
			</thead>
			<tfoot>
				<tr>
					<td colspan="3">자료제공: INCREPAS</td><!-- colspan은 컬럼들의 병합, rowspan은 행 병합 -->
				</tr>
			</tfoot>
			<tbody>
				<tr>
					<td>1</td>
					<td>2</td>
					<td>3</td>
				</tr>
				<tr>
					<td>4</td>
					<td>5</td>
					<td>6</td>
				</tr>
			</tbody>	
		</table>
	
	
		<label for="m_id">아이디:</label>
		<input type="text"  id="m_id"  name="id"/><br/>
		
		<label for="m_pw">비밀번호:</label>
		<!-- HTML에서 이름이 같은 파라미터들은 JSP에서는 배열로 받는다. -->
		<input type="password"  id="m_pw"  name="pw"/><br/>
		
		<label for="m_pwd">비밀번호 재확인:</label>
		<input type="password"  id="m_pwd"  name="pw"/><br/>
		
		<label for="m_name">이름:</label>
		<input  id="m_name"  name="name"/><br/>
	</form>
