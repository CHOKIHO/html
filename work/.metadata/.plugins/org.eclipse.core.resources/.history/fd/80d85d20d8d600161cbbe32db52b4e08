<title>Insert title here</title>

<style type="text/css">

	div#box {
		width:300px;
		height: 100px;
		border: 1px solid black;
		margin-top: 20px;
	}	
 
</style>
<script type="text/javascript">
		
	
	
	//파라메타 number인지 체크함수
	function checkNumber(val) {
		
		//파라메터 숫자일경우 true, 그렇지않을경우 false;
		//자바스크립트는 함수의 리턴형이 없지만 반환값이 필요할땐 return을 사용한다.
		var v1=true;
		
		for (var i=0;i<val.length;i++){
			
			//문자열에서 1문자 가져오기
			var code = val.charCodeAt(i);
			if (code<48 && code>57) {
				v1=false;				
				break;
			}
		}
		
		return v1;
	}	
/*
			var ch = var.charAt(i);/
			if (ch>=48 && ch<57) {
			}
 */				
	
	function test(ff) {
		var yy = ff.yy.value;
		//alert(yy);
		
		if (checkNumber(yy)) {

			//입력값이 숫자일경우 성년판단
			var now = new Date(); //Date함수 생성
			var cur_y = now.getFullYear();
			var age = cur_y - yy;
			var msg="";
			
			if (age<19) {
				msg = "미성년자입니다.";
			} else { 
				msg = "성년입니다.";			
			}
		
			document.getElementById("box").innerHTML = msg;
			
		} else {
			alert("숫자만 입력하세요");
		}
	}
	
</script>

</head>
<body>
	<form action="">
		<fieldset>
			<legend>생년월일</legend>
			<label for="b_year">출생년도</label>
			<input type="text" id="b_year" name="yy">
			<input type="button" value="확인" onclick="test(this.form)">
		</fieldset>
	</form>
	<div id="box">
		
	</div>
	
